<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.customseekbar.MainActivity">

    <com.example.customseekbar.CustomSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:weightSum="50"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:background="#DCDCDC"
            android:layout_centerVertical="true">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:gravity="right">
                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:gravity="right">
                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:background="@color/colorPrimary" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:gravity="right">
                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorPrimary" />
            </LinearLayout>
        </LinearLayout>
        <SeekBar
            android:id="@+id/sb_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="50"
            android:thumb="@drawable/thumb_image"
            android:progressDrawable="@android:color/transparent" />
    </RelativeLayout>



    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/seekbar3_style"
        android:thumb="@drawable/seekbar3_custom_thumb"/>

</LinearLayout>
